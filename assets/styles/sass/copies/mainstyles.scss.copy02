.menu-header {
    width: 100%;
    height:130px;
    z-index: 99;
    background: rgb(254,94,19);
    background: rgba(254,94,19,0.9);
    position:fixed;
}
  
nav#menu {
    float:right;
    margin:-90px 0 0 -40px;
}

.menu-wide li:last-child {
    height:100px;
    border-right: 14px solid rgb(254,94,19);
}

.menu-wide li {
    display:inline;
    @include top-head-menu-orange;
    font: $gf-oswald-menu;
}

.menu-wide a:link {
  //color: #f3d648;
    color: #f3d6a7;
  text-decoration: none;
}

.menu-wide a:visited {
  @extend .menu-wide;
    //color: #f89d59;
      color: #f3dea3;
}

.menu-wide a:hover {
  @extend .menu-wide;
  color: #ffdd00;
}

.menu-wide a:active {
  @extend .menu-wide;
    color: #ffe800;
  border-bottom: yellow dotted 1px;
}

