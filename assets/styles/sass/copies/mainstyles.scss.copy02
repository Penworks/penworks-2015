//@import '_partial';
@import url(http://fonts.googleapis.com/css?family=Noto+Sans:400,400italic|News+Cycle:400,700|Khand:400,700|Oswald:400,700|Rubik+One);



/*
 MIXINS
 ========================================== */

@mixin ff-fix-header {
    -moz-transform: scale(1); 
    -moz-transform-origin: 0 0;
}

@mixin box-sizing {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}

@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
     -moz-border-radius: $radius;
      -ms-border-radius: $radius;
          border-radius: $radius;
}

@mixin custom-counter {
    margin: 0;
    padding: 0;
    list-style-type: none;
}

@mixin custom-counter-li {
    counter-increment: step-counter;
    margin-bottom: 10px;
}

@mixin custom-counter-li-before {
  content: counter(step-counter);
  margin-right: 5px;
  font-size: 80%;
  background-color: rgb(179, 200, 16);
  color: white;
  font-weight: bold;
  padding: 3px 8px;
  @include border-radius(3px);
}

@mixin custom-button {
 // content: counter(step-counter);
  margin-right: 5px;
  font-size: 80%;
  background-color: rgb(179, 200, 16);
  color: white;
  font-weight: bold;
  padding: 3px 8px;
  @include border-radius(3px);
}

@mixin web-transition-size {
    -webkit-transition: width 3s ease, height 3s ease;
    -moz-transition: width 3s ease, height 3s ease;
    -o-transition: width 3s ease, height 3s ease;
    transition: width 3s ease, height 3s ease;
    }
    
@mixin box-shadow-dark {
    box-shadow: 0 0 10px rgba(0,0,0,0.3);
}

@mixin box-shadow-light {
    box-shadow: 0 0 10px rgba(210, 214, 217, 0.3);
}


@mixin entry-list {
  display:block;
  list-style:square inside;
  line-height: normal;
  padding-left:20px;
  border-left:$border-7-olive;
}

@mixin image-entry{
    padding:0px;
    float:left;
    margin:0 auto;
    position: relative;
    overflow:hidden;
}

@mixin image-credit-hover {
    background: rgb(248, 78, 45);
    background: rgba(248, 78, 45, 0.6);
    max-width: 100%;
    height:25px;
    padding:20px 20px 50px 20px;
    position: absolute;
    top:30px;
    left:20px;
    color:#fff;
    display:none;
    font: 1.0em 'Oswald', sans-serif;
}

@mixin entry-list-hover {
    z-index: 200;
    background: rgb(17,45,48);
    background: rgba(17,45,48,0.6);   
    max-width: 450px;
    max-height:400px;
    padding:30px 30px 50px 30px;
    overflow:hidden;
    position: absolute;
    bottom:-10px;
    left:200px;
    color:#000;
    display:none;
    font: 1.0em 'Oswald', sans-serif;
    @include border-radius(3px);
}

@mixin popupoverlay{
 box-shadow: 0 0 10px rgba(0,0,0,0.3);
 width:auto;
 height:auto;
 display:none;
 margin:1em;
 background:#000;
 padding-left:7px;
}

@mixin top-head-menu {
    margin-right: 5px;
    font-size: 80%;
    background-color: rgb(57, 72, 16);
    color: rgb(254, 138, 19);  
    font-weight: bold;
    padding: 3px 8px;
    @include border-radius(3px);
}
@mixin top-head-menu-orange {
    margin-right: 5px;
    //font-size: 80%;
    //background-color: rgb(234, 54, 16);
    border-right:$border-5-orange;
    color: rgb(254, 162, 96);  
    font-weight: bold;
    padding: 10px 8px;
   // @include border-radius(3px);
}


